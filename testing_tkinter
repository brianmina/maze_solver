from tkinter import Tk, BOTH, Canvas

class Windows:
    def __init__(self, width, height):
        # Create the root widget
        self.__root = Tk()

        #Set the title of the window
        self.__root.title("My window")

        #Create the canvas with the given width and height
        self.__canvas = Canvas(self.__root, width=width, height=height)

        #Pack the canvas to make it ready for drawing
        self.__canvas.pack(fill=BOTH, expand=1)

        #Initialize the running state
        self.__running = False
    
    def redraw(self):
        self.__root.update_idletasks()
        self.__root.update()
    
    def wait_for_close(self):
        self.__running = True
        while self.__running:
            self.redraw()
    
    def close(self):
        self.__running = False


def main():
     # Create a Window instance with a width of 800 pixels and height of 600 pixels
    win = (800, 600)

    # Wait for the window to close
    win.wait_for_close()

    # Ensure the main function runs when this script is executed
    if __name__ == "__main__":
        main()
    